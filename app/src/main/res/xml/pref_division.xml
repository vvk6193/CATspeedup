<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="numCountDiv"
        android:title="@string/count_number"
        android:defaultValue="@string/count_default_number"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:singleLine="true"
        android:maxLines="1" />

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:key="number_of_digit_div1"
        android:title="@string/pref_title_multiplication_digits"
        android:defaultValue="2"
        android:entries="@array/pref_mul_div_digit"
        android:entryValues="@array/pref_mul_div_digit"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <ListPreference
        android:key="number_of_digit_div2"
        android:title="@string/pref_title_division_digits"
        android:defaultValue="1"
        android:entries="@array/pref_mul_div_digit"
        android:entryValues="@array/pref_mul_div_digit"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

</PreferenceScreen>
